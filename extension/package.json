{
  "name": "nebulate-chrome-extension",
  "version": "1.0.0",
  "description": "Chrome extension for YouTube and Nebula",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "test": "npx jest",
    "style": "prettier --write \"src/**/*.{ts,tsx}\"",
    "watch:chrome": "webpack --config chrome/webpack/webpack.dev.js --watch",
    "run:chrome": "web-ext run --source-dir chrome/dist --target chromium --start-url \"https://www.youtube.com/results?search_query=notjustbikes\" --chromium-binary \"/Applications/Google Chrome Dev.app/Contents/MacOS/Google Chrome Dev\" --devtools",
    "build:chrome": "webpack --config chrome/webpack/webpack.prod.js",
    "watch:firefox": "webpack --config firefox/webpack/webpack.dev.js --watch",
    "run:firefox": "web-ext run --source-dir firefox/dist --firefox=firefoxdeveloperedition --firefox-preview --devtools --start-url \"https://www.youtube.com/results?search_query=notjustbikes\"",
    "lint:firefox": "web-ext lint --source-dir firefox/dist --ignore-files \"**/*.map\"",
    "build:firefox": "webpack --config firefox/webpack/webpack.prod.js",
    "zip:firefox": "web-ext build --source-dir firefox/dist --overwrite-dest --artifacts-dir firefox/dist --ignore-files \"**/*.map\"",
    "sign:firefox": "web-ext sign --api-key $AMO_JWT_ISSUER --api-secret $AMO_JWT_SECRET --source-dir firefox/dist --artifacts-dir firefox/dist --ignore-files \"**/*.map\""
  },

  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/oenu/Nebulate.git"
  },
  "dependencies": {
    "@emotion/react": "^11.10.5",
    "@mantine/core": "^5.8.3",
    "@mantine/hooks": "^5.8.3",
    "@tabler/icons": "^1.112.0",
    "@types/firefox-webext-browser": "^94.0.1",
    "csstype": "^3.1.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.202",
    "@types/copy-webpack-plugin": "^10.1.0",
    "@types/glob": "^7.2.0",
    "@types/jest": "^27.0.2",
    "@types/prettier": "^2.6.3",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/rimraf": "^3.0.2",
    "copy-webpack-plugin": "^9.0.1",
    "css-loader": "^6.7.1",
    "glob": "^7.1.6",
    "jest": "^27.2.1",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2 ",
    "style-loader": "^3.3.1",
    "ts-jest": "^27.0.5",
    "ts-loader": "^8.0.0",
    "typescript": "^4.4.3 ",
    "web-ext": "^7.4.0",
    "webpack": "^5.61.0",
    "webpack-cli": "^4.0.0",
    "webpack-merge": "^5.0.0"
  }
}
